ang-main-header([showUserPanel]="false")
#mainContent.container.main-content(tabindex="0")
  .row
    .col-sm-3
    .col-sm-6
      .card.card--light
        .card-header
          h1#loginHeading {{ 'LOGIN.HEADING' | translate }}
        .card-body
          form(
            (ngSubmit)="submitLogin(loginForm)"
            )
            .form-group
              label(for="loginEmail") {{ 'LOGIN.EMAIL_LABEL' | translate }}
              input#inputLoginEmail.form-control(name="username" type="text" placeholder="Username")
            .form-group
              label(for="loginPassword") {{ 'LOGIN.PASSWORD_LABEL' | translate }}
              input#inputLoginPassword.form-control(name="password" type="password" placeholder="Password")
              //- #errorMsg.form-text.text-danger(*ngIf="errorMsg") {{ errorMsg | translate }}
              //- p.form-text.text-danger(*ngIf="forcePwdRst", [innerHtml]="'LOGIN.FORCE_PW_RESET_MSG' | translate")
            p.notranslate([innerHtml]="'LOGIN.TERMS' | translate")
            .form-group
              button#btnLoginRemote.btn.btn-primary([class.loading]="loginLoading" type="submit" name="action" data-sc="account: remote user log in") 
                | {{ 'LOGIN.LOGIN_BTN' | translate }}
          a#linkLoginResetModal((click)="showPwdModal = true" tabindex="0" class="link") {{ 'LOGIN.FORGOT_PW_PROMPT' | translate }}
          br
          a.link([attr.href]="'LOGIN.LOGIN_HELP_LINK' | translate" target="_blank") {{ 'LOGIN.LOGIN_HELP_PROMPT' | translate }}