ang-main-header
ang-main-nav

.container.main-content#mainContent
    form#formInst(
            [formGroup]="manageInstForm",
            (ngSubmit)="updateInstitutionalDetails(manageInstForm)"
            )    
        .page-hdr
            h1 {{ 'INTITUTION.HEADINGS.MANAGE_INST' | translate }}
        p.small.pt-2.info-txt([innerHTML]="'INTITUTION.TEXTS.PROMO_MATERIALS' | translate")

        h2.mt-3 {{ 'INTITUTION.HEADINGS.LOCAL_SUPPORT' | translate }}
        p.small {{ 'INTITUTION.TEXTS.LOCAL_SUPPORT' | translate }}
        .usr-contact-cntnr
            .cntnr
                h3 {{ 'INTITUTION.HEADINGS.EMAILS' | translate }}
                p.small {{ 'INTITUTION.TEXTS.EMAILS' | translate }}
                .cntct-row                    
                    .lbl {{ 'INTITUTION.LABELS.ADMIN' | translate }}:
                    input#inputAdminName(type="text", [formControl]="manageInstForm.controls['admin_name']", name="admin_name", readonly)
                    .has-danger(*ngIf="formSubmitted && manageInstForm.controls['admin_name'].hasError('required')")
                        .form-control-feedback {{ 'INTITUTION.MESSAGES.ADMIN_NAME' | translate }}
                .cntct-row
                    .lbl *{{ 'INTITUTION.LABELS.EMAIL' | translate }}:
                    input#inputAdminEmail(type="text", [formControl]="manageInstForm.controls['admin_email']", name="admin_email", readonly)
                    .has-danger(*ngIf="formSubmitted && manageInstForm.controls['admin_email'].hasError('email')")
                        .form-control-feedback {{ 'INTITUTION.MESSAGES.ADMIN_VALID_EMAIL' | translate }}
                .cntct-row
                    .lbl {{ 'INTITUTION.LABELS.PHONE' | translate }}:
                    input#inputAdminPhone(type="text", [formControl]="manageInstForm.controls['admin_phone']", name="admin_phone", readonly)

                p.small *{{ 'INTITUTION.LABELS.NOTE' | translate }}

        .has-danger(*ngIf="messages.userListError")
            .form-control-feedback {{ 'INTITUTION.MESSAGES.CONTACT_INFO_ERROR' | translate }}
        .has-danger(*ngIf="messages.serviceError")
            .form-control-feedback {{ 'INTITUTION.MESSAGES.SERVICE_ERROR' | translate }}
        
